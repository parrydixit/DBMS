create table emp_1(
ssn varchar2(10),
name char(10),
dept_no number(10),
primary key(ssn));


create table proj(
proj_no varchar2(10),
proj_area varchar2(10),
primary key(proj_no));


create table assign(
essn varchar2(10),
proj_no varchar2(10),
foreign key(essn) references emp_1(ssn));

Table created.

alter table assign
modify proj_no varchar2(10) references proj(proj_no);

Table altered.



insert into emp_1 values('&ssn','&name',&dept_no);  // insert the values
SELECT * FROM EMP_1
;

SSN	   NAME 	 DEPT_NO
---------- ---------- ----------
